        <recipe>
            <name>Pesto pasta</name>
            <image>https://assets.afcdn.com/recipe/20130924/64004_w1024h576c1cx3456cy2304.jpg</image>
            <ingredients>
                <ingredient ingredientId="1">
                    <quantity>180g</quantity>
                </ingredient>
                <ingredient ingredientId="2">
                    <quantity>100g</quantity>
                </ingredient>
