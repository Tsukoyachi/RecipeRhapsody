                    <quantity>150g</quantity>
                </ingredient>
                <ingredient ingredientId="6">
                    <quantity>150g</quantity>
                </ingredient>
                <ingredient ingredientId="7">
                    <quantity>1 heaped tablespoon</quantity>
                </ingredient>
                <ingredient ingredientId="8">
                    <quantity>1</quantity>
